<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.MovieFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="visible"
            android:weightSum="100">

            <ImageView
                android:id="@+id/poster_movie_fragment"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="70"
                android:focusableInTouchMode="true"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/template" />

            <TextView
                android:id="@+id/title_movie_fragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="18dp"
                android:layout_weight="10"
                android:gravity="center"
                android:text="@string/exemple_title"
                android:textColor="@color/white"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/plot_movie_fragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="18dp"
                android:justificationMode="inter_word"
                android:text="@string/exemple_plot"
                android:textColor="@color/white" />
        </LinearLayout>
    </ScrollView>

</FrameLayout>